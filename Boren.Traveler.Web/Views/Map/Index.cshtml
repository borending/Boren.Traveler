    </div>
    <div class="col-md-3">
        <div id="app">
            <v-row>
                <v-col>
                    <v-text-field id="search"
                                  append-inner-icon="mdi-magnify"
                                  density="comfortable"
                                  variant="solo"
                                  single-line
                                  label="請輸入地點名稱"
                                  v-model="text"
                                  v-on:click:append-inner="searching">
                    </v-text-field>
                </v-col>
            </v-row>
            <v-row v-for="item in list">
                <v-col>
                    <v-card variant="tonal"
                            class="mt-0"
                            :title="item.displayName">
                        <v-card-actions>
                            <v-btn>
                                新增
                            </v-btn>
                        </v-card-actions>
                    </v-card>
                </v-col>
            </v-row>
        </div>
    </div>
</div>

