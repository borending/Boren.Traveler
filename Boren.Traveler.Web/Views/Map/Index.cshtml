@{
    ViewData["Title"] = "地圖";
}

@section Styles {
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900|Material+Icons">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vuetify@3.6.14/dist/vuetify.min.css" />
    <style>
        #map {
            height: 768px;
            width: 100%;
        }
    </style>
}

<div class="text-center">
    <h1 class="display-4">MAP</h1>
</div>
<div class="row">
    <div class="col-md-9">
        <div id="map"></div>
    </div>
    <div class="col-md-3">
        <div id="app">
            <v-text-field :loading="loading"
                          append-inner-icon="mdi-magnify"
                          density="compact"
                          label="請輸入地點名稱"
                          variant="solo"
                          hide-details
                          single-line
                          @@click:append-inner="onClick">
            </v-text-field>
        </div>
        <div id="list"></div>
    </div>
</div>

