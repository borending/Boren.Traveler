@page
@model LoginModel

@{
    ViewData["Title"] = "登入";
}

@section Styles {
    <style>
        #form p {
            text-align: right;
        }

            #form p > a {
                color: gray;
                text-decoration: none;
            }
    </style>
}

<div id="app" class="row justify-content-center">
    <div class="col-md-4">
        <section>
            <h1>@ViewData["Title"]</h1>
            <form id="form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">電子郵件</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">密碼</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">忘記密碼</a>
                </p>
                <div class="mb-3">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-lg btn-outline-secondary">登入</button>
                </div>
                <p>
                    還不是會員嗎?　<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">馬上註冊新帳號</a>
                </p>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}